<%= javascript_pack_tag 'index', 'data-turbolinks-track': 'reload' %>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center mt-4">To Do List</h1>

      <form id="new-task-form" class="form-inline">
        <div class="form-group">
          <input type="text" class="form-control" id="task-value" placeholder="Task">
        </div>
        <button type="submit" class="btn btn-primary">Add Task</button>
      </form>

      <div class="row" id="tasks"></div>
    </div>
  </div>
</div>